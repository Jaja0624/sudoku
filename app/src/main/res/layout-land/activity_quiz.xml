<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.QuizActivity"
    android:background="@drawable/blackbackgroun">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="66dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center_horizontal"
                android:text="00:00"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/question"
                android:gravity="center"
                android:padding="4dp"
                android:text="Question goes here"
                android:textColor="#660066"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speechDisplayText"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_weight="4"
                android:autoSizeTextType="uniform"
                android:background="@drawable/output"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#660066"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/speechBtn"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="50px"
                android:layout_marginHorizontal="400px"
                android:background="@drawable/mic_purple"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
